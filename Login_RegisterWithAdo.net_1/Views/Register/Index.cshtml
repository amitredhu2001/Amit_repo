@model Login_RegisterWithAdo.net_1.Models.Register
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12 p-2 m-2">
        <h2 class="text-primary">Registered Users</h2>
        <div class="col-10 p-2 m-2">
            <table id="tblData" class="table table-active table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Hobbies</th>
                        <th>Address</th>
                        <th>About</th>
                        <th>Salary</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
    <div class="modal" id="myModal" role="dialog" data-bs-keyboard="false" data-bs-backdrop="static">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">User Details</h4>
                </div>
            <input id="txtid" hidden class="form-control col-4" />
                <div class="modal-body">
                    <div class="form-group p-1 m-1">
                        <label>Name</label>
                        <input id="txtname" class="form-control col-4" />
                        <span id="name_error" class="text-danger">Please enter name</span>
                    </div>
                    <div class="form-group p-1 m-1">
                        <label>Email</label>
                        <input id="txtemail"  class="form-control col-4" />
                        <span id="email_error"class="text-danger">Please Enter Email</span>
                    </div>
                    <div class="form-group p-1 m-1">
                        <label>Hobbies</label>
                        <select id="selectlist" multiple="multiple">
                            <option value="Singing">Singing</option>
                            <option value="Dancing">Dancing</option>
                            <option value="Reading">Reading</option>
                            <option value="Playing">Playing</option>
                        </select>
                        <span id="hobbies_error"class="text-danger">Please Select Hobbies</span>
                    </div>
                    <div class="form-group p-1 m-1">
                        <label>Address</label>
                        <input id="txtadd" class="form-control" />
                        <span id="address_error" class="text-danger">Please Enter Address</span>
                    </div>
                    <div class="form-group p-1 m-1">
                        <label>About</label>
                        <textarea  class="ckeditor" id="editor"></textarea>
                        <span id="about_error" class="text-danger">Please Enter About</span>
                    </div>
                    <div class="form-group p-1 m-1">
                        <label>Salary</label>
                        <input  type="number" id="txtsalary" class="form-control" />
                        <span id="salary_error" class="text-danger">Please Enter Salary</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="updatebtn" class="btn btn-primary">Update</button>
                    <a asp-controller="Register" asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/newfolder/datatable.js"></script>

    <script>
        $('#selectlist').multiselect({
            templates: {
                button: '<button type="button" class="multiselect dropdown-toggle btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false"><span class="multiselect-selected-text" ></span></button>',
            },
        });
    </script>
}
