@model Login_RegisterWithAdo.net_1.Models.Register

@{
    ViewBag.Title = "Index";
}
<link href="~/css/bootstrap-multiselect.min.css" rel="stylesheet" />
<script src="~/js/newfolder/bootstrap-multiselect.min.js"></script>
<form id="registrationfrom" asp-action="Register"method="post">
    <div class="row">
        <div class="col-12">
            <h2 class="text-info">Sign Up</h2>
            <div class="col-4 p-2 m-2">
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Email" ></label>
                    <input asp-for="@Model.Email" class="form-control col-4" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Hobbies"></label>
                    <select asp-for="@Model.HobbiesList" id="Hobbies" class="from-control" multiple="multiple" asp-items="@(new SelectList(ViewBag.hobbieslist,"Text","Value"))"></select>
                    <span asp-validation-for="@Model.Hobbies" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.About"></label>
                   <textarea asp-for="@Model.About" class="ckeditor" id="About"></textarea>
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <label asp-for="@Model.Salary"></label>
                    <input asp-for="@Model.Salary" class="form-control" />
                    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                </div>
                <div class="form-group p-1 m-1">
                    <button type="submit" class="btn btn-info">Regsiter</button>
                </div>
                <br/>
                Already Registered <a asp-action="Login">SignIn</a>
            </div>
        </div>
    </div>      
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#Hobbies").multiselect({
            templates: {
                button: '<button type="button" class="multiselect dropdown-toggle btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false"><span class="multiselect-selected-text"></span></button>',
            },
        });
    </script>
}
